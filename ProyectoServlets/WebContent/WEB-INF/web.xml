<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>ProyectoServlets</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>PrimeraClase</servlet-name>
    <servlet-class>PrimeraClase</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PrimeraClase</servlet-name>
    <url-pattern>/PrimeraClase</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>MiServlet</servlet-name>
    <servlet-class>miservlet.MiServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MiServlet</servlet-name>
    <url-pattern>/MiServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>ServletObtenerEmpleado</servlet-name>
    <servlet-class>practica1.servlet.ServletObtenerEmpleado</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletObtenerEmpleado</servlet-name>
    <url-pattern>/ServletObtenerEmpleado</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>ServletEmpleado</servlet-name>
    <servlet-class>practicaHibernate.ServletEmpleado</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletEmpleado</servlet-name>
    <url-pattern>/ServletEmpleado</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>ServletJDBC</servlet-name>
    <servlet-class>practicaJDBC.ServletJDBC</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletJDBC</servlet-name>
    <url-pattern>/ServletJDBC</url-pattern>
  </servlet-mapping>
  
  
  <listener>
	<listener-class>practicaHibernate.ClaseHttpSessionListener</listener-class>
  </listener>
  
   <listener>
	<listener-class>practicaHibernate.ClaseServletContextListener</listener-class>
  </listener>
  
  <listener>
	<listener-class>practicaHibernate.ClaseServletRequestListener</listener-class>
  </listener>
  
   
  <filter>
    <filter-name>MiFiltro</filter-name>
    <filter-class>practicaHibernate.MiFiltro</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>MiFiltro</filter-name>
    <url-pattern>/ServletEmpleado</url-pattern> 
  </filter-mapping>  
  
   <filter>
    <filter-name>FiltroJDBC</filter-name>
    <filter-class>practicaJDBC.FiltroJDBC</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FiltroJDBC</filter-name>
    <url-pattern>/ServletEmpleado</url-pattern> 
  </filter-mapping>  
  
  
  
  
</web-app>